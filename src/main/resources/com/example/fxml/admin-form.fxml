<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.AdminFormController">
   <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" text="назад" />

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="passwordColumn" text="Password" />
            <TableColumn fx:id="roleColumn" text="Role" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="creationDateColumn" text="Creation Date" />
            <TableColumn fx:id="lastModifiedByColumn" text="Last Modified By" />
        </columns>
    </TableView>

    <HBox>
        <TextField fx:id="usernameField" promptText="Username" />
        <TextField fx:id="passwordField" promptText="Password" />
        <TextField fx:id="roleField" promptText="Role" />
        <TextField fx:id="emailField" promptText="Email" />
        <Button onAction="#saveUser" text="Save" />
        <Button onAction="#deleteUser" text="Delete" />
        <Button onAction="#updateUser" text="Update" />
      <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="51.0" text="Clear" />
    </HBox>
</VBox>
