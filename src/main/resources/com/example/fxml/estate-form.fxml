<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.EstateFormController">
    <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" text="назад" />
    <TextField fx:id="searchField" prefHeight="25.0" prefWidth="471.0" promptText="Поиск по названию" />

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Название" />
            <TableColumn fx:id="categoryColumn" text="Категория" />
            <TableColumn fx:id="costColumn" text="Расходы" />
            <TableColumn fx:id="conditionColumn" text="Состояние" />
            <TableColumn fx:id="acquisitionDateColumn" text="Дата Приобретения" />
            <TableColumn fx:id="addedByUserColumn" text="Добавлено пользователем" />
            <TableColumn fx:id="lastModifiedByColumn" text="Последнее изменение кем" />
        </columns>
    </TableView>

    <HBox>
        <TextField fx:id="nameField" promptText="Название" />
        <ComboBox fx:id="categoryComboBox" />
        <TextField fx:id="costField" promptText="Расходы" />
        <!-- ComboBox для выбора состояния -->
        <ComboBox fx:id="conditionComboBox" />
        <Button onAction="#saveEstate" text="Добавить" />
        <Button onAction="#deleteEstate" text="Удалить" />
        <Button onAction="#updateEstate" text="Обновить" />
        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clear"  prefHeight="25.0" prefWidth="51.0" text="Отчистить" />
        <Button onAction="#inventoryCard" text="Инвентаризация" />
    </HBox>
</VBox>
