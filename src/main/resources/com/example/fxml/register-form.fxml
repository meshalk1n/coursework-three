<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controllers.RegisterFormController"
            prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="errorMessageLabel" textFill="red" />
    <TextField fx:id="usernameField" layoutX="250.0" layoutY="100.0" promptText="Username"/>
    <PasswordField fx:id="passwordField" layoutX="250.0" layoutY="150.0" promptText="Password"/>
    <TextField fx:id="roleField" layoutX="250.0" layoutY="200.0" promptText="Role"/>
    <TextField fx:id="emailField" layoutX="250.0" layoutY="250.0" promptText="Email"/>
    <Button layoutX="250.0" layoutY="300.0" onAction="#register" text="Register"/>

</AnchorPane>

